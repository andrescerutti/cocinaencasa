<div class="container">
  <div class="mb-3 mt-4">
    <%= simple_form_for :query, url: kits_path, method: :get do |f| %>
    <div class="d-flex align-items-center">
      <div class=" w-75 flex-grow-1 " >
        <%= f.input :address, class: "order-form order_address_address", id:"location", placeholder: "Buscar en otra dirección", wrapper_html: { class:"mb-0" }, label: false %>
      </div>
      <%= f.submit "Buscar", class: "btn btn-primary ml-3 w-25", id:"button", disabled:"disabled" %>
    </div>
    <% end %>
    <h2 class="mt-5 mb-2 section-secondary" style="line-height: 35px;">Resultados cerca de <span class="category-selected"><%= truncate(@search, length: 20, separator: ", ")[0..-4] %></span></h2>
  </div>
  <h2 class="mt-3 mb-4 section-secondary">Categorías</h2>
  <div class="cards-scroll d-flex">
    <% @categories.each do |category| %>
    <%= render "components/category", category: category %>
    <% end %>
  </div>
  <h2 class="mt-5 mb-4 section-secondary">Restaurantes</h2>
  <div class="restaurant-list">
    <% @stores.each do |store| %>
    <%= render "components/store", store: store %>
    <% end %>
  </div>
  <h2 class="mt-5 mb-4 section-secondary">Kit Chef Box</h2>
  <div class="kits-wrapper">
    <% @kits.each do |kit| %>
    <%= render "components/kit", kit: kit, kits: @kits %>
    <% end %>
  </div>
  <h2 class="text-center mt-5">Tu restaurant favorito en casa</h2>
  <h4 class="text-center my-3"><small>¡Convertite en el chef de tu plato favorito!</small></h4>

  <a href=" <%= new_user_registration_path %>" class="btn btn-primary btn-lg btn-block mb-3">Registrate</a>
</div>
