<div class="container">
  <div class="" id="search-restaurant">
    <a href="#restaurants" class="scroll-down"><span>buscar por restaurant</span></a>
  </div>

  <h2 class="mt-4 mb-3 section-secondary">Categorías</h2>
  <div class="cards-scroll d-flex">
    <% @categories.each do |category| %>
    <%= render "components/category", category: category %>
    <% end %>
  </div>
  <h2 class="mt-5 mb-3 section-secondary">Kit Chef Box</h2>
  <div class="kits-wrapper">
    <% @kits.each do |kit| %>
      <%= render "components/kit", kit: kit, kits: @kits %>
    <% end %>
  </div>
  <h2 class="mt-3 mb-3 section-secondary">Restaurantes</h2>
  <div class="cards-scroll">
    <div class=" mt-3">
      <% @stores.each_with_index do |store| %>
      <%= link_to store_path(store) do %>
      <div class="card-scroll pr-0 pl-2 mr-3 col-md-4">
        <div class="card-kit rounded">
          <img src=<%= store.restaurant.image %> />

          <div class="card-body">
            <div>
              <h5 class="card-title mb-1"><%= store.restaurant.name %> - <%= store.name %></h5>
              <p class="card-title text-truncate flex-wrap mb-1 "> <%= store.address.address %></p>
            </div>
            <div class="card-text d-flex justify-content-between mt-3">
              <% if store.restaurant.kits.order(:price).first != nil %>
              <p class="card-text card-price">Desde $<%= store.restaurant.kits.order(:price).first.price %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
<div class="text-center my-5">
  <%= image_tag("kit.png",  width: 350, height: 350) %>
</div>
<h2 class="text-center my-3">Una comida perfecta sin salir de casa</h2>
<h4 class="text-center my-3"><small>Creá magia experimentando paso a paso recetas unicas</small></h4>

<a href=" <%= new_user_registration_path %>" class="btn btn-primary btn-lg btn-block mb-3">Registrate</a>
</div>
