<div class="container px-5">
  <div class="d-flex flex-column justify-content-center my-3">
    <%= link_to "", :back, class: "fas fa-arrow-left mt-2", style: "text-decoration: none; color: #2F9B7A; width: 200px; font-size: 30px;" %>
    <div class="d-flex flex-column shadow justify-content-center my-3 border border-primary rounded">
      <h3 class="pt-4 text-primary text-center">Donde la magia comienza</h3>
      <p class="text-secondary text-center">Estas a punto de convertirte en chef! Seguí el paso a paso...</p>
    </div>
    <h4 class="pt-4 mb-4 text-secondary text-center"><%= @kit.name %></h4>

    <iframe id="ytplayer" type="text/html" width="100%" height="480"
      src="https://www.youtube.com/embed/<%= @guide.video %>?controls=2rails"
      frameborder="0"/>
    </iframe>
  </div>

  <div class="description-container mt-5">
    <h4 class="ingredients-title"><strong>Ingredientes:</strong></h4>
    <p class="text-secondary">Esto encontrarás en tu kit.</p>
  </div>
  <div class="image-container d-md-block">
    <div class="cards-scroll">
      <div class="cards-scroll mt-3">
        <% @kit.ingredients.each do |kit| %>
        <div class="card-scroll col-md-4">
          <div class="card-kit-showkit border">
            <img src=<%= kit.image %>  />
            <div class="card-body">
              <div>
                <h5 class="card-title mb-1"><%= kit.name %></h5>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

   <div class="carrousel my-5">
    <h4><strong>Utensilios que vas a necesitar:</strong></h4>
    <p class="text-secondary">Para que vayas ganando tiempo te decimos que vas a necesitar.</p>
    <div class="cards-scroll">
      <div class="cards-scroll mt-3">
        <% @kit.cookware.each do |kit| %>
        <div class="card-scroll col-md-4">
          <div class="card-kit-showkit border">
            <img src=<%= kit.image %> >
            <div class="card-body">
              <div>
                <h5 class="card-title mb-1"><%= kit.name %></h5>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="steps">
    <h4 class="mb-3 mt-5">Pasos a seguir:</h4>
    <% @guide.steps.order(order: :asc).each_with_index do |step, index| %>

      <% if @kit.restaurant.user == current_user %>
          <div class="m-4" >
            <p>Paso  <%= index + 1 %></p>
            <%= simple_form_for (step) do |f| %>
            <div class="d-row align-items-center">
              <%= f.input :order, label: "Orden" %>
              <%= f.input :content, label: "Descripción" %>
            </div>
            <div class="d-flex">
              <%= f.submit "Actualizar", class: "btn btn-primary"%>
            <% end %>
              <%= link_to "Eliminar", step_path(step), class: "ml-4 btn btn-outline-danger",method: :delete, data: {confirm: "¿Estas seguro que queres borrar este paso?"} %>
            </div>
          </div>

      <% else %>
        <div class="d-flex align-items-center">
          <p class="stepnumber mr-3 my-4" style="font-size: 25px">Paso<%= index + 1 %>.</p>
          <p class="text-muted my-4"><%= step.content %></p>
        </div>
      <% end %>
    <% end %>
    <% if @kit.restaurant.user == current_user %>
    <p>Crear un nuevo paso</p>
        <%= simple_form_for [@guide, @step] do |f| %>
          <div class="d-row align-items-center">
            <%= f.input :order, label: "Orden" %>
            <%= f.input :content, label: "Descripción" %>
          </div>
            <%= f.submit "Agregar nuevo paso", class: "btn btn-primary"%>
        <% end %>
    <% end %>
  </div>
  </div>
<br>
