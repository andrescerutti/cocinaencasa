<div class="navbar navbar-expand-sm navbar-dark navbar-mobile py-3 bg-white justify-content-between nav_shadow">
  <div class="d-none d-md-block">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag('logo.png' , style: "width: 150px") %>
    <% end %>
  </div>

    <div class="d-md-none d-sm-block">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag('logomobile.png', style: "width: 45px" ) %>
    <% end %>
  </div>


  <div class="d-flex">
    <% if current_user&.restaurants.present?  %>

    <div>

