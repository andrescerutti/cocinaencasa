<div class="container mt-3">
  <%= link_to "", :back, class: "fas fa-arrow-left my-2", style: "text-decoration: none; color: #2a94e7; width: 200px; font-size: 30px;" %>
  <h2>Cambiar la contraseña</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
    label: "Nueva contraseña",
    required: true,
    autofocus: true,
    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
    input_html: { autocomplete: "Nueva contraseña" } %>
    <%= f.input :password_confirmation,
    label: "Confirma tu nueva contraseña",
    required: true,
    input_html: { autocomplete: "nueva contraseña" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cambiar mi contraseña", class: 'btn btn-primary' %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
