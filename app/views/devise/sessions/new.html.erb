<div class="container d-flex justify-content-center mt-5">
  <div class="col-md-6 ">
    <div class="d-flex align-items-center">
      <div></div>
      <%= link_to new_user_registration_path, class: "btn btn-primary registration-login" do %>
        <h1>¡Creá tu cuenta para pedir!</h1>
      <% end %>
    </div>
    <h2 class="sign-up-purchase">¿Ya tenés una cuenta?</h2>
    <div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <p>Contraseña</p>
        <%= f.input :password, label:false,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean , label: "Recordarme" %>
      </div>

      <div class="form-actions mb-4">
        <%= f.button :submit, "Ingresar", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
