<div class="container d-flex justify-content-center mt-5">
  <div class="col-md-6 ">
    <%= link_to "", :back, class: "fas fa-arrow-left mb-3", style: "text-decoration: none; color: #2a94e7; width: 200px; font-size: 30px;" %>
    <h2>Ingresar</h2>


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
                    <p>Contrase√±a</p>
        <%= f.input :password, label:false,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean , label: "Recordarme" %>
      </div>

      <div class="form-actions mb-4">
        <%= f.button :submit, "Ingresar", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
