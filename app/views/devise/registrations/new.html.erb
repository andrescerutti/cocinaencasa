<div class="container d-flex justify-content-center">
  <div class="col-md-6">
    <div id="new-account" class=" d-flex align-items-center">
      <div></div>
      <h1>¡Último paso para empezar!</h1>
    </div>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> Hubo un error, reingresar datos.</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Email" ,
                    input_html: {  autocomplete: "email" }%>
        <%= f.input :first_name,
                    required: true,
                    label: "Nombre" ,
                    input_html: {  autocomplete: "Nombre" }%>
        <%= f.input :last_name,
                    required: true,
                    label: "Apellido" ,
                    input_html: {  autocomplete: "Apellido" }%>

        <%= f.input :phone,
                    required: true,
                    label: "Teléfono" ,
                    input_html: {  autocomplete: "Teléfono" }%>

        <%= f.input :password,
                    required: true,
                      label: "Nueva contraseña" ,
                    hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length),
                    input_html: { autocomplete: "nueva contraseña" } %>
        <%= f.input :password_confirmation,
                    label: "Confirmar contraseña" ,
                    required: true,
                    input_html: { autocomplete: "nueva contraseña" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Registrarme", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>
